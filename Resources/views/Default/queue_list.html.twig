{% extends 'BCCResqueBundle::layout.html.twig' %}

{% block body %}
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="{{ path('BCCResqueBundle_homepage') }}">
                BCC Resque
            </a>
            <ul class="nav">
                <li><a href="{{ path('BCCResqueBundle_homepage') }}">Home</a></li>
                <li class="active"><a href="#">Queues</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="container">

    <div class="row">
        <h2 class="span">
            Queues
        </h2>
    </div>
    {% for queue in queues %}
        <div class="row">
            <h3 class="span">
                {{ queue.name }}
            </h3>
        </div>
        <div class="row">
            <div class="span">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th class="span5">
                            Name
                        </th>
                        <th class="span5">
                            Args
                        </th>
                    </tr>
                    </thead>

                    {% for job in queue.jobs %}
                        <tr>
                            <td>{{ job.name }}</td>
                            <td>
                                {{ job.args | json_encode }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">
                                <em>empty...</em>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    {% endfor %}

</div>
{% endblock %}
